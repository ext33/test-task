{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:import/typescript"
    ],

    "plugins": ["@typescript-eslint", "import"],

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "document": true,
        "window": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        }
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "typescript": {
                "project": "./tsconfig.json"
            }
        }
        //    "boundaries/types": ["helpers", "components", "views", "layouts", "pages", "app"],
        //    "boundaries/ignore": ["src/**/*.spec.js", "src/**/*.test.js"],
        //    "boundaries/alias": {
        //      "components": "src/components",
        //      "helpers": "src/helpers"
        //    }
    },
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "rules": {
        "@typescript-eslint/semi": "off",
        "react/prop-types": "off",
        "no-unused-vars": "warn",
        "@typescript-eslint/default-param-last": "off",
        "@typescript-eslint/indent": "off",
        "@typescript-eslint/comma-dangle": "off",
        "array-bracket-spacing": ["warn", "always"],
        "array-callback-return": "warn",
        "arrow-parens": [0, "as-needed"],
        "class-methods-use-this": 0,
        "consistent-return": "warn",
        "func-names": ["warn", "never"],
        "indent": ["warn", 4, { "ignoredNodes": ["JSXElement"], "SwitchCase": 1 }],
        "jsx-a11y/label-has-associated-control": 0,
        "linebreak-style": "off",
        "max-classes-per-file": ["error", 100],
        "no-console": "off",
        "no-implicit-coercion": "off",
        "no-mixed-operators": "warn",
        "no-multiple-empty-lines": ["warn", { "max": 2, "maxBOF": 1, "maxEOF": 10}],
        "no-plusplus": 0,
        "no-shadow": "off",
        "no-underscore-dangle": 0,
        "object-curly-spacing": ["warn", "always"],
        "padded-blocks": 0,
        "prefer-promise-reject-errors": "warn",
        "quotes": ["warn", "double", { "allowTemplateLiterals": false }],
        "@typescript-eslint/quotes": ["warn", "double", { "allowTemplateLiterals": false }],
        "semi": ["warn", "never"],
        "space-in-parens": ["warn", "never"],
        "no-floating-promises": 0,
        "no-unsafe-assignment": 0,
        "no-unsafe-member-access": 0,
        "no-inferrable-types": 0,
        "restrict-template-expressions": 0,
        "prefer-const": 0,
        "no-constant-condition": 0,
        "no-empty-function": 0,
        "@typescript-eslint/explicit-module-boundary-types": 0,
        "@typescript-eslint/no-empty-function": "warn",
        "@typescript-eslint/ban-types": "warn",
        "import/no-named-as-default": "off",
        "import/no-named-as-default-member": "off",
        "import/namespace": "off",
        "import/order": [
            "warn",
            {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    }
                ],
                "pathGroupsExcludedImportTypes": ["react"],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    },

    /* --- typescript fix --- */
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "no-undef": "off"
            }
        }
    ],

    /* --- ignore --- */
    "ignorePatterns": [
        "**/.nyc_output",
        "**/build",
        "**/jest.config.js",
        "**/coverage",
        "**/dist",
        "**/dist-dev",
        "**/fixture",
        "**/node_modules",
        "**/package-lock.json",
        "**/temp",
        "src/styles"
    ]

}
